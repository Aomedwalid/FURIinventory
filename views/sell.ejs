    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const addButtons = document.querySelectorAll('.add-btn');
            const selectedItemsList = document.getElementById('selected-items-list');
            const totalPriceElement = document.getElementById('total-price');
            let totalPrice = 0;

            addButtons.forEach(button => {
                button.addEventListener('click', function () {
                    const row = this.closest('tr');
                    const itemName = row.cells[0].textContent;
                    const itemPrice = parseFloat(row.cells[2].textContent.replace('$', ''));

                    // Check if the item is already in the selected items list
                    const existingItem = Array.from(selectedItemsList.querySelectorAll('tr')).find(
                        tr => tr.cells[0].textContent === itemName
                    );

                    if (existingItem) {
                        // If the item exists, increase its quantity
                        const quantityCell = existingItem.cells[1];
                        const quantity = parseInt(quantityCell.textContent) + 1;
                        quantityCell.textContent = quantity;

                        // Update the total price for this item
                        const totalCell = existingItem.cells[3];
                        totalCell.textContent = `$${(itemPrice * quantity).toFixed(2)}`;
                    } else {
                        // If the item doesn't exist, add it to the list
                        const newRow = document.createElement('tr');
                        newRow.innerHTML = `
          <td>${itemName}</td>
          <td class="quantity">1</td>
          <td>$${itemPrice.toFixed(2)}</td>
          <td>$${itemPrice.toFixed(2)}</td>
          <td>
            <div class="quantity-control">
              <button class="minus-btn">-</button>
              <button class="plus-btn">+</button>
              <button class="remove-btn">Remove</button>
            </div>
          </td>
        `;
                        selectedItemsList.appendChild(newRow);

                        // Add event listeners for plus/minus buttons
                        const plusButton = newRow.querySelector('.plus-btn');
                        const minusButton = newRow.querySelector('.minus-btn');
                        const removeButton = newRow.querySelector('.remove-btn');

                        plusButton.addEventListener('click', () => updateQuantity(newRow, 1, itemPrice));
                        minusButton.addEventListener('click', () => updateQuantity(newRow, -1, itemPrice));
                        removeButton.addEventListener('click', () => removeItem(newRow, itemPrice));
                    }

                    // Update the total price
                    totalPrice += itemPrice;
                    totalPriceElement.textContent = `$${totalPrice.toFixed(2)}`;
                });
            });

            function updateQuantity(row, change, price) {
                const quantityCell = row.cells[1];
                let quantity = parseInt(quantityCell.textContent) + change;

                if (quantity < 1) {
                    removeItem(row, price);
                    return;
                }

                quantityCell.textContent = quantity;

                const totalCell = row.cells[3];
                const total = price * quantity;
                totalCell.textContent = `$${total.toFixed(2)}`;

                // Update the total price
                totalPrice += price * change;
                totalPriceElement.textContent = `$${totalPrice.toFixed(2)}`;
            }

            function removeItem(row, price) {
                const quantity = parseInt(row.cells[1].textContent);
                totalPrice -= price * quantity;
                totalPriceElement.textContent = `$${totalPrice.toFixed(2)}`;
                row.remove();
            }
        });
    </script>
